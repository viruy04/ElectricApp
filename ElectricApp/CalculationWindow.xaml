<Window x:Class="ElectricApp.CalculationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectricApp"
        mc:Ignorable="d"
        Title="Окно работы с формулами"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        PreviewKeyDown="Window_PreviewKeyDown">

    <!-- Конвейер для масштаба -->
    <Window.Resources>
        <local:FontSizeConverter x:Key="FontSizeConverter"/>
        
        <!-- Стили -->
        <Style x:Key="ScrollableResultsStyle" TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="MaxHeight" Value="300"/>
        </Style>

        <Style x:Key="ResultsTextStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.012}"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.08}"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Width" Value="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.15}"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#2980B9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5DADE2"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontFamily" Value="Consolas"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Width" Value="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.2}"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="Height" Value="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.08}"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="FontSize" Value="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.03}"/>
            <Setter Property="Padding" Value="4,5,0,0"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <Style x:Key="ParameterLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.035}"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.15}"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <!-- Фон -->
    <Window.Background>
        <ImageBrush ImageSource="Images/Menu.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="⭠" Click="Back_Click"
                    Style="{StaticResource RoundedButtonStyle}" 
                    Width="55" Height="55" Background="#a6a6a6" BorderBrush="Gray"
                    Grid.Column="0"/>

            <TextBlock x:Name="FormulaText" 
                       FontSize="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.05}"
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       Grid.Column="1"
                       Margin="0,20"/>

            <Button Content="?" Width="55" Height="55" Click="Help_Click" 
                    Style="{StaticResource RoundedButtonStyle}"
                    Grid.Column="2"/>
        </Grid>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="600"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Анимация -->
            <Border CornerRadius="20" BorderBrush="Gray" BorderThickness="2" 
                    Background="#CCFFFFFF" Grid.Column="0">
                <Viewbox Stretch="Uniform">
                    <Canvas x:Name="Animation_canvas" Width="800" Height="600" Margin="15"/>
                </Viewbox>
            </Border>

            <!-- Правая панель -->
            <Border CornerRadius="20" BorderBrush="Gray" BorderThickness="2" 
        Background="#CCFFFFFF" Grid.Column="2" Margin="0"
        MinWidth="400">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="10">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="ParameterHintText" 
                       FontSize="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.035}" 
                       FontStyle="Italic" 
                       Foreground="Gray" 
                       Grid.Row="0" 
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>

                        <StackPanel x:Name="InputFieldsPanel" Grid.Row="1" Margin="0,20,0,0"/>

                        <TextBlock x:Name="ResultText" 
                       FontSize="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.035}" 
                       FontWeight="SemiBold" 
                       TextAlignment="Center" 
                       TextWrapping="Wrap" 
                       Grid.Row="2"
                       VerticalAlignment="Center"/>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                            <ComboBox x:Name="UnitComboBox" 
                          SelectionChanged="UnitComboBox_SelectionChanged" 
                          Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.15}"
                          MinWidth="150"
                          FontSize="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.025}"
                          Background="White" 
                          Margin="0,0,15,0"/>
                            <Button Content="Рассчитать" Click="Calculate_Click"
                        Style="{StaticResource RoundedButtonStyle}" IsDefault="True"/>
                        </StackPanel>

                        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                            <Button Content="Сохранить" Click="SaveResult_Click" 
                        Style="{StaticResource RoundedButtonStyle}" Margin="0,0,15,0"/>
                            <Button Content="Показать результаты" Click="ShowResults_Click" 
                        Style="{StaticResource RoundedButtonStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                            <Button Content="Очистить поля" Click="ClearFields_Click" 
                        Style="{StaticResource RoundedButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Всплывающее окно -->
        <Border x:Name="ResultsPopup" CornerRadius="10" Background="#F0F0F0" 
                BorderBrush="Gray" BorderThickness="1"
                Visibility="Collapsed" Panel.ZIndex="1000"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.7}"
                Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.7}"
                MinWidth="600" MinHeight="400">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Сохраненные результаты" FontWeight="Bold"
                           FontSize="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource FontSizeConverter}, ConverterParameter=0.04}"
                           Margin="15" HorizontalAlignment="Center"/>

                <ScrollViewer Style="{StaticResource ScrollableResultsStyle}" Grid.Row="1">
                    <TextBox x:Name="ResultsTextBox" Style="{StaticResource ResultsTextStyle}"/>
                </ScrollViewer>

                <Button Content="Закрыть" Click="CloseResults_Click"
                        Style="{StaticResource RoundedButtonStyle}"
                        Grid.Row="2" HorizontalAlignment="Center" Margin="15"/>
            </Grid>
        </Border>
    </Grid>
</Window>