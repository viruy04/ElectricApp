<Window x:Class="ElectricApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectricApp"
        mc:Ignorable="d"
        Title="Меню"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="CanResize"
        KeyDown="Window_KeyDown">

    <!-- Фон -->
    <Window.Background>
        <ImageBrush ImageSource="Images/Menu.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
        <!-- Стиль для кнопок с закругленными углами и эффектом наведения -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#2980B9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"  
                                BorderBrush="{TemplateBinding BorderBrush}"  
                                BorderThickness="{TemplateBinding BorderThickness}"  
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center"  
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для увеличенной круглой кнопки "i" -->
        <Style x:Key="InfoButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2980B9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,10,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"  
                                BorderBrush="{TemplateBinding BorderBrush}"  
                                BorderThickness="{TemplateBinding BorderThickness}"  
                                CornerRadius="25">
                            <ContentPresenter HorizontalAlignment="Center"  
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопка "i" в правом нижнем углу -->
        <Button Style="{StaticResource InfoButtonStyle}" Content="i"
        VerticalAlignment="Bottom"
        Margin="0,0,10,0"
        ToolTipService.Placement="Left"
        ToolTipService.VerticalOffset="-50"
        ToolTipService.HorizontalOffset="-10"
        ToolTipService.ShowDuration="60000"
        ToolTipService.InitialShowDelay="0"
        ToolTipService.BetweenShowDelay="0"
        ToolTipService.ShowOnDisabled="True" Grid.Row="1">
            <Button.ToolTip>
                <ToolTip MaxWidth="350">
                    <StackPanel>
                        <TextBlock Text="Управление" FontWeight="Bold" Margin="0,0,0,5" FontSize="18"/>
                        <TextBlock Text="Используйте клавиши:" Margin="0,0,0,5" FontSize="16"/>
                        <TextBlock Text="- 1, 2, 3 для выбора формулы" FontSize="16"/>
                        <TextBlock Text="- enter для расчета" FontSize="16"/>
                        <TextBlock Text="- del для очистки поля" FontSize="16"/>
                        <TextBlock Text="- esc для возврата в предыдущее окно" Margin="0,0,0,10" FontSize="16"/>
                        <TextBlock Text="О разработчиках" FontWeight="Bold" Margin="0,0,0,5" FontSize="18"/>
                        <TextBlock Text="Над проектом работали: Казакова А. Ю., Пономарёва А. С., Рожина А. А.&#x0a;Группа С326"
                           TextWrapping="Wrap" FontSize="16"/>
                    </StackPanel>
                </ToolTip>
            </Button.ToolTip>
        </Button>

        <!-- Заголовок программы -->
        <TextBlock Grid.Row="0" Text="Программа визуализации постоянного тока"  
                   FontSize="40"  
                   FontWeight="Bold"  
                   Foreground="White"  
                   HorizontalAlignment="Center"  
                   Margin="0,20,0,30"  
                   TextWrapping="Wrap"/>

        <!-- Основная панель с выбором формул и кнопками -->
        <Border Grid.Row="1" Background="#CCFFFFFF" CornerRadius="20" Padding="50" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Width="450" HorizontalAlignment="Center">
                <TextBlock Text="Выбор формулы"  
                           FontSize="30"  
                           FontWeight="SemiBold"  
                           Foreground="#333"  
                           HorizontalAlignment="Center"  
                           Margin="0,0,0,30"/>

                <Button Content="Сила тока через заряд"
                        Click="OpenFormula1_Click"  
                        Style="{StaticResource RoundedButtonStyle}" />

                <Button Content="Закон Ома"  
                        Click="OpenFormula2_Click"  
                        Style="{StaticResource RoundedButtonStyle}" />

                <Button Content="Закон Джоуля-Ленца"  
                        Click="OpenFormula3_Click"  
                        Style="{StaticResource RoundedButtonStyle}" />

                <Separator Margin="0,20"/>

                <Button Content="Выход"  
                        Click="Exit_Click"  
                        Style="{StaticResource RoundedButtonStyle}"  
                        Background="#E74C3C"  
                        BorderBrush="#C0392B"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>